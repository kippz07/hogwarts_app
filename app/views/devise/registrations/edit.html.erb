<section>
  <div class="banner red">
    <%= image_tag "gryffindor.png", class: "house-badge" %>
  </div>
  <div class="banner yellow">
    <%= image_tag "hufflepuff.png", class: "house-badge" %>
  </div>
  <div class="scroll-register">
    <%= image_tag "scrolllarge.png", class: "img-responsive scroll-img" %>

    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field email">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field dob">
        <%= f.label :dob %>
        <%= f.date_field :dob %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :wand_wood %>
        <%= f.select :wand_wood, [['Apple','apple'],['Ash','ash'],['Beech','beech'],['Blackthorn', 'blackthorn'],['Cherry', 'cherry'],['Chestnut', 'chestnut'],['Ebony', 'ebony'], ['Elder', 'elder'],['Holly', 'holly'],['Oak', 'oak'],['Maple', 'maple'], ['Pine', 'pine'],['Rowan', 'rowan'],['Vine', 'vine'], ['Walnut', 'walnut'], ['Willow', 'willow'], ['Yew', 'yew']] %>
      </div>

      <div class="field">
        <%= f.label :wand_core %>
        <%= f.select :wand_wood, [['Unicorn tail', 'unicorn tail'],['Dragon heartstring'],['Pheonix feather', 'pheonix feather'],['Veela', 'veela'], ['Thestral tail', 'thestrail tail'], ['Troll whisker', 'troll whisker'], ['Bone', 'bone'], ['Basilisk horn', 'basilisk horn']] %>
      </div>

      <div class="field">
        <%= f.label :pet %>
        <%= f.text_field :pet %>
      </div>

      <div class="field">
        <%= f.label :staff %>
        <%= f.select :staff, [['Yes', 'true'], ['No', 'false']] %>
      </div>

      <div class="field">
        <%= f.label :password %> <i>(if changing)</i>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Update" %> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>        <%= link_to "Back", :back %>
      </div>
    <% end %>



  </div>
  <div class="banner blue">
    <%= image_tag "ravenclaw.png", class: "house-badge" %>
  </div>
  <div class="banner green">
    <%= image_tag "slytherin.png", class: "house-badge" %>
  </div>

</section>
