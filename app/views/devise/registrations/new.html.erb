<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :dob %><br />
    <%= f.date_field :dob %>
  </div>

  <div class="field">
    <%= f.label :wand_wood %><br />
    <%= f.select :wand_wood, [['Apple','apple'],['Ash','ash'],['Beech','beech'],['Blackthorn', 'blackthorn'],['Cherry', 'cherry'],['Chestnut', 'chestnut'],['Ebony', 'ebony'], ['Elder', 'elder'],['Holly', 'holly'],['Oak', 'oak'],['Maple', 'maple'], ['Pine', 'pine'],['Rowan', 'rowan'],['Vine', 'vine'], ['Walnut', 'walnut'], ['Willow', 'willow'], ['Yew', 'yew']] %>
  </div>

  <div class="field">
    <%= f.label :wand_core %><br />
    <%= f.select :wand_wood, [['Unicorn tail', 'unicorn tail'],['Dragon heartstring'],['Pheonix feather', 'pheonix feather'],['Veela', 'veela'], ['Thestral tail', 'thestrail tail'], ['Troll whisker', 'troll whisker'], ['Bone', 'bone'], ['Basilisk horn', 'basilisk horn']] %>
  </div>

  <div class="field">
    <%= f.label :pet %><br />
    <%= f.text_field :pet %>
  </div>

  <div class="field">
    <%= f.label :staff%><br />
    <%= f.select :staff, [['Yes', 'true'], ['No', 'false']] %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
